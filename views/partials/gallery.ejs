<div class="container justify-content-center">
    <div class="row row-cols-1 g-2 mb-5">
        <%- include("carousel") %> 
    </div>
    <div class="row row-cols-1 justify-content-center justify-content-sm-left">
        <form>
            <div class="input-group input-group-sm mb-3" id="searchbar">
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                <button class="btn btn-info">Search</button>
            </div>
        </form>
    </div>
    
    
    <div class="row row-cols-xl-4 g-3">
        <% for(let harjutus of data.harjutused){%>
            <div class=" col-md-6 col-xl-3 col-lg-4">
                <div class="cardelement">
                    <img class="cardimg" src="/images/<%= harjutus.pilt %> " alt="">
                    <div class="cardtext">
                        <%= harjutus.kirjeldus %>
                        <hr>
                        <div class="row row-cols-1 row-cols-md-2 justify-content-left bx-0">
                            <% for(let lihasgrupp of harjutus.lihasgruppid){ %>
                                <div class="col" style="text-transform: capitalize;">
                                    <span class="badge bg-warning text-dark"><%= lihasgrupp %></span>
                                </div>
                            <%}%>
                        </div> 
                    </div>
                </div>
            </div>
        <%}%>
    </div>
</div>