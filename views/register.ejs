<% layout("layout/boilerplateUL.ejs") %>
<%- include('./partials/flash')  %>


<h1 class="loginh1">Registreeri</h1>



<form class="loginform" action="/register" method="POST">
    <div>
        <label for="username">Username</label>
        <input id="username" type="text" name="username">
    </div>
    <div>
        <label for="password">Password</label>
        <input id="password" type="text" name="password" style="-webkit-text-security: square;">
    </div>
    <div>
        <label for="roll">Roll</label>
        <select name="type" id="roll">
            <option value="sportlane">Sportlane</option>
            <option value="külaline">Külaline</option>
            <option value="treener">Treener</option>
        </select>
    </div>
    <button class="login" type="submit">Registreeri</button>
    <a class="tagasi" href="/">Tagasi</a>
</form>