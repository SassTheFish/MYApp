<%- layout("layout/boilerplateUL.ejs") %> 
<%- include('../partials/flash')  %>

<div class="container mx-auto" style="padding-top: 200px;">
  <h1 class="text-center text-dark m-5">Uuenda Kava</h1>

  <div>
    <form class="form-control p-3 px-5 border-add" action="/ukekavad/update/<%=kava._id%>?_method=PUT" method="POST"">
        <div class="row mx-auto">
            <div class="col-12 col-md-6">
              <label for="validationCustom03" class="form-label text-dark">Kava nimi</label>
              <input type="text" class="form-control" name="nimi" id="validationCustom03" required value=<%=kava.nimi%> >
              <div class="invalid-feedback">
                Viga
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label for="validationCustom05" class="form-label text-dark">Raskustase</label>
              <input type="number" class="form-control" name="raskustase" id="validationCustom05" required min="10" step="10" max="100" value=<%=kava.raskustase%>>
              <div class="invalid-feedback">
                Viga
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label for="validationCustom05" class="form-label text-dark">Kuupäev</label>
              <input type="date" class="form-control" name="kuupäev" id="validationCustom05">
              <div class="invalid-feedback">
                Viga
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label for="validationCustom05" class="form-label text-dark">Ringid</label>
              <input type="number" class="form-control" name="ringid" id="validationCustom05" min="1">
              <div class="invalid-feedback">
                Viga
              </div>
            </div>
            <div class="col-12 d-flex justify-content-between align-middle py-3">
              <button class="btn btn-primary" type="submit">Uuenda</button>
            </div>
        </div>
    </form>
  </div>
</div>

